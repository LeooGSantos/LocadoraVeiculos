@page
@model IEnumerable<LocadoraVeiculos.Models.Cliente>

<h2>Lista de Clientes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Idade</th>
            <th>Endereço</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Idade</td>
                <td>@cliente.Endereco</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cliente.Id">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@cliente.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
