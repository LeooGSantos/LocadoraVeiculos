@page
@model LocadoraVeiculos.Models.Aluguel

<h2>Criar Aluguel</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Veiculo" class="control-label"></label>
        <select asp-for="Veiculo.Id" class="form-control" asp-items="@(new SelectList(ViewBag.Veiculos, "Id", "Modelo"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Cliente" class="control-label"></label>
        <select asp-for="Cliente.Id" class="form-control" asp-items="@(new SelectList(ViewBag.Clientes, "Id", "Nome"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="DataInicio" class="control-label"></label>
        <input asp-for="DataInicio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataFim" class="control-label"></label>
        <input asp-for="DataFim" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ValorAluguel" class="control-label"></label>
        <input asp-for="ValorAluguel" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>

