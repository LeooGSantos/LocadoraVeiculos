@page
@model LocadoraVeiculos.Models.Aluguel

<h2>Excluir Aluguel</h2>

<div>
    <h4>Id: @Model.Id</h4>
    <h4>Veículo: @Model.Veiculo.Modelo</h4>
    <h4>Cliente: @Model.Cliente.Nome</h4>
    <h4>Data de Início: @Model.DataInicio.ToShortDateString()</h4>
    <h4>Data de Fim: @Model.DataFim.ToShortDateString()</h4>
    <h4>Valor do Aluguel: @Model.ValorAluguel.ToString("C")</h4>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index">Cancelar</a>
</form>

